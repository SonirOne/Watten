{% extends '@Frontend/base.html.twig' %}

{% block popup_content %}
    {% include '@Frontend/game/popup.html.twig' %}
{% endblock %}

{% block specific_css %}
    <link rel="stylesheet" href="/css/newgame.css">
{% endblock %}  

{% block specific_js %}
    <script src="/js/newgame.js"></script>
{% endblock %}

{% block content %}
    <form id="frmNewGame" method="POST" action="{{path('frontend_create_game')}}">
        <div class="row">      
            <div class="col-xs-12">
                <h1>Neues Spiel erstellen</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12">
                <div id="errorPanel" class="alert alert-danger nodisplay">
                    Bitte genau zwei Spieler pro Team
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-6">
                <div class="row">
                    <div class="col-xs-12">
                        <h3>Team 1</h3>
                    </div>
                    <div class="col-xs-12 col-md-6">
                        <span class="btn btn-default btn-block addUser" data-teamid="1">
                            <i class="fa fa-user fa-2x" aria-hidden="true"></i> Mitspieler
                        </span>
                    </div>
                    <div class="col-xs-12 col-md-6">
                        <a class="btn btn-default btn-block addTeam" data-teamid="1">
                            <i class="fa fa-users fa-2x" aria-hidden="true"></i> Team
                        </a>
                    </div>
                    <div class="col-xs-12 marginTop20">
                        <ul id="team1" class="entryList">
                        </ul>
                    </div>
                    <input id="team1datatype" class="nodisplay" name="team1datatype" type="text">
                    <input id="team1data" class="nodisplay" name="team1data" type="text">
                </div>                
            </div>
            <div class="col-xs-6">
                <div class="row">
                    <div class="col-xs-12">
                        <h3>Team 2</h3>
                    </div>
                    <div class="col-xs-12 col-md-6">
                        <span class="btn btn-default btn-block addUser" data-teamid="2">
                            <i class="fa fa-user fa-2x" aria-hidden="true"></i> Mitspieler
                        </span>
                    </div>
                    <div class="col-xs-12 col-md-6">
                        <span class="btn btn-default btn-block addTeam" data-teamid="2">
                            <i class="fa fa-users fa-2x" aria-hidden="true"></i> Team
                        </span>
                    </div>
                    <div class="col-xs-12 marginTop20">
                        <ul id="team2" class="entryList">
                        </ul>
                    </div>
                    <input id="team2datatype" class="nodisplay" name="team2datatype" type="text">
                    <input id="team2data" class="nodisplay" name="team2data" type="text">
                </div>                  
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12 form-group">
                <h3>Maximalpunkte</h3>
                <label for="inMaxPoints">Punkte:</label>
                <input id="inMaxPoints" name="maxpoints" class="form-control" type="text" value="15">
            </div>
            <div class="col-xs-2">
            </div>
        </div>
        <div class="row marginTop20">
            <div class="col-xs-12">
                <input type="submit" class="btn btn-default btnNewGame" value="Neues Spiel starten">
            </div>
        </div>
    </form>
{% endblock %}

