        <link rel="stylesheet" href="/css/common.css">
        <script src="/js/common.js"></script>

        {% block specific_css %}
        {% endblock %}

        {% block specific_js %}
        {% endblock %}
    </head>
    <body>
        <div class="popup-panel">
            <div class="popup-panel-close">
                <i class="fa fa-times fa-3x" aria-hidden="true"></i>
            </div>
                {% block popup_content %}
